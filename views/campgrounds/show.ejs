<% layout("layouts/boilerplate") %>
<div class="row">
  <div class="col-12">
    <a class="btn btn-light mb-3" href="/campgrounds"
      >Back to All Campgrounds</a
    >
  </div>
</div>
<div class="row">
  <div class="col-6">
    <div class="card mb-3">
      <img
        src="<%= campground.image %>"
        class="card-img-top img-fluid"
        alt="..."
      />
      <div class="card-body">
        <h5 class="card-title"><%= campground.title %></h5>
        <p class="card-text"><%= campground.location %></p>
        <p class="card-text"><%= campground.description %></p>
        <p class="card-text">Submitted by <%= campground.author.username %></p>
        <p class="card-text">
          <small class="text-muted">$<%= campground.price %></small>
        </p>
        <% if (currentUser && campground.author.equals(currentUser._id) ) { %>
        <a
          href="/campgrounds/<%= campground._id %>/edit"
          class="btn btn-primary mb-3"
        >
          Edit Campground
        </a>
        <form
          action="/campgrounds/<%= campground._id %>?_method=delete"
          method="post"
        >
          <button class="btn btn-danger">Delete Campground</button>
        </form>
        <% } %>
      </div>
    </div>
  </div>

  <div class="col-6">
    <h2>Leave A Review</h2>
    <form
      action="/campgrounds/<%= campground._id %>/reviews"
      class="mb-3 needs-validation"
      method="post"
      novalidate
    >
      <div class="mb-3">
        <label for="rating" class="form-label">Rating</label>
        <input
          type="range"
          min="1"
          max="5"
          step="1"
          class="form-range"
          id="rating"
          name="review[rating]"
          required
        />
      </div>
      <div class="mb-3">
        <label for="body" class="form-label">Review</label>
        <textarea
          name="review[body]"
          id="body"
          cols="30"
          rows="3"
          class="form-control"
          required
        ></textarea>
      </div>
      <button class="btn btn-success">Submit Review</button>
    </form>

    <% for(let review of campground.reviews){ %>
    <div class="card mb-3">
      <div class="card-body">
        <h5 class="card-title">Rating: <%= review.rating %></h5>
        <p class="card-text"><%= review.body %></p>
        <form
          action="/campgrounds/<%= campground._id %>/reviews/<%= review._id %>?_method=delete"
          method="post"
        >
          <button href="#" class="btn btn-sm btn-danger">Delete Review</button>
        </form>
      </div>
    </div>
    <% } %>
  </div>
</div>
